<div class="h-full bg-gray-200 p-8">
  <div class="bg-white rounded-lg shadow-xl pb-8">
    <div class="w-full h-[250px]">
      <img
        src="https://cdn.discordapp.com/attachments/1086987704434167828/1174799782808662047/R.jpg?ex=6568e88e&is=6556738e&hm=3ca7ba2da194efd33ce3099cd5eae18b987670311e2c6decc5a850b02fd7bd2a&"
        class="w-full h-44 rounded-tl-lg rounded-tr-lg"
      />
    </div>
    <div class="flex flex-col items-center -mt-20">
      <img
        src="https://th.bing.com/th/id/OIP.yYkxTSe5CN85PoxJcQj8ngHaGJ?rs=1&pid=ImgDetMain"
        class="h-40 w-40 border-4 border-white rounded-full"
      />
      <div class="flex items-center space-x-2 mt-2">
        <p class="text-2xl"><%= user.name %></p>
        <span class="bg-blue-500 rounded-full p-1" title="Verified">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="text-gray-100 h-2.5 w-2.5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="4"
              d="M5 13l4 4L19 7"
            ></path>
          </svg>
        </span>
      </div>
      <p class="text-gray-700">Worker at MyDvls</p>
      <p class="text-sm text-gray-500">Kathmandu, Nepal</p>
    </div>
    <div
      class="flex-1 flex flex-col items-center lg:items-end justify-end px-8 mt-2"
    ></div>
  </div>

  <div
    class="my-4 flex flex-col 2xl:flex-row space-y-4 2xl:space-y-0 2xl:space-x-4"
  >
    <div class="w-full flex flex-col 2xl:w-1/3">
      <div class="flex-1 bg-white rounded-lg shadow-xl p-8">
        <h4 class="text-xl text-gray-900 font-bold">Personal Info</h4>
        <ul class="mt-2 text-gray-700">
          <li class="flex border-y py-2">
            <span class="font-bold w-24">Full name:</span>
            <span class="text-gray-700"><%= user.name %></span>
          </li>
          <li class="flex border-b py-2">
            <span class="font-bold w-24">Joined:</span>
            <span class="text-gray-700"><%= user.creationTime %></span>
          </li>
          <li class="flex border-b py-2">
            <span class="font-bold w-24">Mobile:</span>
            <span class="text-gray-700"><%= user.phone %></span>
          </li>
          <li class="flex border-b py-2">
            <span class="font-bold w-24">Email:</span>
            <span class="text-gray-700"><%= user.email %></span>
          </li>
        </ul>
      </div>
      <div class="flex-1 bg-white rounded-lg shadow-xl mt-4 p-8">
        <div class="w-full flex flex-row">
          <div class="w-1/2">
            <h4 class="text-xl text-gray-900 font-bold">Activity log</h4>
          </div>
          <div class="w-1/2">
            <a
              class="w-full bg-red-500 text-white rounded-md px-2 py-1"
              href="/admin/highlands/cuisine/delete/log"
            >
              Delete my Log</a
            >
          </div>
        </div>
        <div class="relative px-4">
          <div
            class="absolute h-full border border-dashed border-opacity-20 border-secondary"
          ></div>
          <% for( let index = 0; index < logs.length; index++ ) { %>
          <div class="flex items-center w-full my-6 -ml-1.5">
            <div class="w-1/12">
              <div class="w-3.5 h-3.5 bg-blue-600 rounded-full"></div>
            </div>
            <div class="w-11/12">
              <p class="text-sm"><%=logs[index].split(`User ${id}:`)[1] %></p>
              <p class="text-xs text-gray-500">
                <%=logs[index].split(`User ${id}:`)[0] %>
              </p>
            </div>
          </div>

          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
